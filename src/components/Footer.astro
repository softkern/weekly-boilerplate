---
import { SITE } from 'config'
---

<footer class="relative border-t bg-white/50 backdrop-blur-sm mt-auto">
  <div class="absolute inset-0 bg-gradient-to-b from-white/30 to-white/50"></div>
  <div class="max-w-4xl mx-auto px-6 py-8 relative">
    <div class="flex flex-col items-center gap-6">
      <div class="flex items-center gap-4">
        <span class="h-px w-12 bg-gradient-to-r from-blue-500 to-transparent rounded-full"></span>
        <p class="text-sm text-gray-600">{SITE.description}</p>
        <span class="h-px w-12 bg-gradient-to-l from-blue-500 to-transparent rounded-full"></span>
      </div>
      
      <div class="flex gap-8">
        <a href="/rss.xml" class="group flex items-center gap-1.5 text-sm text-gray-500 hover:text-gray-800">
          <svg class="w-4 h-4 transition-transform group-hover:scale-110" viewBox="0 0 24 24" fill="currentColor">
            <path d="M6.18 15.64a2.18 2.18 0 112.18 2.18 2.18 2.18 0 01-2.18-2.18zM6.18 8.91h4.37a6.54 6.54 0 016.54 6.54v4.37M6.18 2.18h4.37a13.27 13.27 0 0113.27 13.27v4.37"/>
