---
import { SITE } from 'config'

const menu = [
  { href: '/archives', label: '归档' },
  { href: '/tags', label: '标签' },
  { href: '/about', label: '关于' },
]

const pathname = new URL(Astro.request.url).pathname
---

<header class="sticky top-0 z-40 absolute inset-0 bg-white/90 backdrop-blur-sm border-b border-gray-100">
  <div class="max-w-4xl mx-auto px-6 py-4 relative">
    <div class="flex items-center justify-between">
      <a href="/" class="flex items-center gap-2 group">
        <div class="relative px-3 py-1.5 rounded-md group-hover:bg-gray-50 transition-colors">
          <span class="text-lg font-medium text-gray-800">
            {SITE.title}
          </span>
          <span class="absolute -right-1 -top-1 flex h-2 w-2">
            <span class="animate-ping absolute inline-flex h-2 w-2 rounded-full bg-blue-400 opacity-75"></span>
            <span class="relative inline-flex rounded-full h-2 w-2 bg-blue-500"></span>
          </span>
        </div>
      </a>

      <nav class="flex items-center gap-2">
        {
          menu.map(item => (
            <a
              href={item.href}
              class:list={[
                'px-3 py-1.5 text-sm rounded-md transition-colors',
                pathname === item.href
                ? 'bg-gray-100 text-gray-900'
                : 'text-gray-600 hover:text-gray-900 hover:bg-gray-50'
              ]}
            >
              {item.label}
            </a>
          ))
        }

        <a href="/search" class="px-3 py-1.5 text-gray-600 hover:text-gray-900 hover:bg-gray-50 rounded-md transition-colors inline-flex items-center gap-2">
          <svg class="w-4 h-4" viewBox="0 0 24 24" fill="none" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
          </svg>
        </a>

        <button id="theme-toggle" class="p-2 text-gray-600 hover:text-gray-900 hover:bg-gray-50 rounded-md transition-colors">
          <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 3v1m0 16v1m9-9h-1M4 12H3m15.364 6.364l-.707-.707M6.343 6.343l-.707-.707m12.728 0l-.707.707M6.343 17.657l-.707.707M16 12a4 4 0 11-8 0 4 4 0 018 0z" />
          </svg>
        </button>
      </nav>
    </div>
  </div>
</header>
